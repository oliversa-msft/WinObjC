<Canvas
    x:Class="UIKit.Xaml.TextField"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UIKit.Xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <!-- Layer content which is a image is behind any sublayers-->
    <Image x:Name="LayerContentImage" />
    <StackPanel>
        <TextBox x:Name="textFieldTB" Background="Red" VerticalAlignment="Center" />
        <PasswordBox x:Name="textFieldPB" Background="Green" VerticalAlignment="Center" Visibility="Collapsed" />
    </StackPanel>
</Canvas>
